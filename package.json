    "ink-select-input": "^6.2.0",
    "ink-spinner": "^5.0.0",
    "ink-text-input": "^6.0.0",
    "ora": "^8.0.0",
    "react": "^19.2.4",
    "zod": "^4.3.6"
  },
  "keywords": [
    "xevol",
    "transcription",
    "transcribe",
    "youtube",
    "analysis",
    "cli",
    "ai",
    "video",
    "subtitles",
    "intelligence"
  ],
  "files": [
    "dist",
