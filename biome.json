{
  "$schema": "https://biomejs.dev/schemas/2.3.13/schema.json",
  "extends": ["../biome.json"],
  "files": {
    "ignoreUnknown": false,
    "includes": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.js", "src/**/*.jsx"]
  },
  "formatter": {
    "lineWidth": 120
  },
  "javascript": {
    "formatter": {
      "trailingCommas": "all"
    }
  },
  "linter": {
    "rules": {
      "style": {
        "useImportType": "warn"
      },
      "suspicious": {
        "noConsole": {
          "level": "warn",
          "options": {
            "allow": ["error", "warn", "info"]
          }
        },
        "noControlCharactersInRegex": "warn"
      },
      "correctness": {
        "useExhaustiveDependencies": "warn",
        "useHookAtTopLevel": "warn"
      }
    }
  }
}
